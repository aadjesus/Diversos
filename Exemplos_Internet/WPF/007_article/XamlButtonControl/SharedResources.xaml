<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

  <!-- Define brush for the background -->
  <LinearGradientBrush x:Key="GlassBackgroundFill"
                       StartPoint="0,0" EndPoint="0,1">
    <GradientStop Offset="0" Color="#ff4b58" />
    <GradientStop Offset="1" Color="#a91e28" />
  </LinearGradientBrush>

  <RadialGradientBrush x:Key="HoverGlassBackgroundFill" Center="0.5,0.5">
     <GradientStop Offset="0" Color="#a91e28" />
     <GradientStop Offset="1" Color="#ff4b58" />
  </RadialGradientBrush>
  
  <SolidColorBrush x:Key="Text" Color="Black" />

  <SolidColorBrush x:Key="ButtonPushedFill" Color="Red" />

  <LinearGradientBrush x:Key="HighlightFill"
                         StartPoint="0,0" EndPoint="0,1">
    <GradientStop Offset="0" Color="#FFFFFFFF" />
    <GradientStop Offset="1" Color="#00000000" />
  </LinearGradientBrush>

   
  <LinearGradientBrush x:Key="BorderStroke" StartPoint="0,0" EndPoint="0,1" >
      <GradientStop Offset="0" Color="#c7c7c7" />
      <GradientStop Offset="1" Color="#b0b0b0" />
  </LinearGradientBrush>

   
 

</ResourceDictionary>