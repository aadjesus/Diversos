<UserControl x:Class="FlyingWindows.WindowTitleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="20" Width="20">
    <Grid ForceCursor="True" Cursor="Hand" Background="White" MouseLeftButtonUp="Grid_PreviewMouseLeftButtonUp">
        <Border x:Name="OuterSquare" Width="18" HorizontalAlignment="Right" Margin="1,1,1,1" BorderThickness="1" BorderBrush="Black">
            <Grid Margin="1" x:Name="InnerGrid">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Margin="0.5" Grid.Column="0" Grid.Row="0" BorderThickness="1" BorderBrush="Black"></Border>
                <Border Margin="0.5" Grid.Column="1" Grid.Row="0" BorderThickness="1" BorderBrush="Black"></Border>
                <Border Margin="0.5" Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="Black"></Border>
                <Border Margin="0.5" Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="Black"></Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
