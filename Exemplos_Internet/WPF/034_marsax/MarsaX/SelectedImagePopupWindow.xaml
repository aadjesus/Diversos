<Window x:Class="MarsaX.SelectedImagePopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MarsaX" Height="450" Width="450"  Icon="images/icon.png">
    <DockPanel LastChildFill="True" Background="{StaticResource backgroundBrush}">

        <Button x:Name="btnSave" DockPanel.Dock="Bottom" Margin="120,10,120,10" Foreground="White" 
                Content="Save" Click="btnSave_Click" Height="30" Template="{StaticResource SaveButton}"
                Tag="images/save.png"/>
        <Image x:Name="selectedImage" Stretch="Uniform"/>
    </DockPanel>
</Window>
