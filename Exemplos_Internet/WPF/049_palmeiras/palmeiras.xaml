        <Grid.Triggers>
                <EventTrigger SourceName="chkAnimarRotacao" RoutedEvent="CheckBox.Checked">
                    <BeginStoryboard Name="animarRotacao">
                        <Storyboard>                            
                            <DoubleAnimation Storyboard.TargetName="rot"                                             Storyboard.TargetProperty="Angle"
                                             By="0" To="360"                                             
                                             Duration="0:0:5"
                                             RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger SourceName="chkAnimarRotacao" RoutedEvent="CheckBox.Unchecked">
                    <StopStoryboard BeginStoryboardName="animarRotacao" />
                </EventTrigger>

            <EventTrigger SourceName="chkAnimarInclinacaoX" RoutedEvent="CheckBox.Checked">
                <BeginStoryboard Name="animarInclinacaoX">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="inc"
                                         Storyboard.TargetProperty="AngleX"
                                         By="0" To="180"                                             
                                         Duration="0:0:5"
                                         RepeatBehavior="Forever"/>                        
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger SourceName="chkAnimarInclinacaoX" RoutedEvent="CheckBox.Unchecked">
                <StopStoryboard BeginStoryboardName="animarInclinacaoX" />
            </EventTrigger>

            <EventTrigger SourceName="chkAnimarInclinacaoY" RoutedEvent="CheckBox.Checked">
                <BeginStoryboard Name="animarInclinacaoY">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="inc"
                                         Storyboard.TargetProperty="AngleY"
                                         By="0" To="180"                                             
                                         Duration="0:0:5"
                                         RepeatBehavior="Forever"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger SourceName="chkAnimarInclinacaoY" RoutedEvent="CheckBox.Unchecked">
                <StopStoryboard BeginStoryboardName="animarInclinacaoY" />
            </EventTrigger>

            <EventTrigger SourceName="chkAnimarEscalaX" RoutedEvent="CheckBox.Checked">
                <BeginStoryboard Name="animarEscalaX">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="esc"
                                         Storyboard.TargetProperty="ScaleX"
                                         By="0.1" To="3.0"                                             
                                         Duration="0:0:5"
                                         RepeatBehavior="Forever"
                                         AutoReverse="True"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger SourceName="chkAnimarEscalaX" RoutedEvent="CheckBox.Unchecked">
                <StopStoryboard BeginStoryboardName="animarEscalaX" />
            </EventTrigger>

            <EventTrigger SourceName="chkAnimarEscalaY" RoutedEvent="CheckBox.Checked">
                <BeginStoryboard Name="animarEscalaY">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="esc"
                                         Storyboard.TargetProperty="ScaleY"
                                         By="0.1" To="3.0"
                                         Duration="0:0:5"
                                         RepeatBehavior="Forever"
                                         AutoReverse="True"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger SourceName="chkAnimarEscalaY" RoutedEvent="CheckBox.Unchecked">
                <StopStoryboard BeginStoryboardName="animarEscalaY" />
            </EventTrigger>

