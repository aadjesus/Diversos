<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
        Title="Estudo de Transformações" Height="500" Width="700"
        FontSize="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style x:Key="centro">
                <Style.Triggers>
                    <Trigger Property="CheckBox.IsChecked" Value="True">
                        <Setter Property="CheckBox.Tag" Value="Visible" />
                    </Trigger>
                    <Trigger Property="CheckBox.IsChecked" Value="False">
                        <Setter Property="CheckBox.Tag" Value="Hidden" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="{x:Type Expander}">
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Margin" Value="3" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="Padding" Value="3" />
            </Style>
            <Style x:Key="sliders" TargetType="{x:Type Slider}">
                <Setter Property="Margin" Value="3" />
                <Setter Property="SmallChange" Value="1" />
                <Setter Property="LargeChange" Value="10" />
            </Style>
            <Style x:Key="sldAngulo" TargetType="{x:Type Slider}"
                   BasedOn="{StaticResource sliders}">
                <Setter Property="Minimum" Value="0" />
                <Setter Property="Maximum" Value="360" />
            </Style>
            <Style x:Key="sldMeioAngulo" TargetType="{x:Type Slider}"
                   BasedOn="{StaticResource sliders}">
                <Setter Property="Minimum" Value="0" />
                <Setter Property="Maximum" Value="180" />
            </Style>
            <Style x:Key="sldCentro" TargetType="{x:Type Slider}"
                   BasedOn="{StaticResource sliders}">
                <Setter Property="Minimum" Value="0" />
                <Setter Property="Maximum" Value="300" />
            </Style>
            <Style x:Key="elCentro" TargetType="{x:Type Ellipse}">
                <Setter Property="Width" Value="8" />
                <Setter Property="Height" Value="8" />
                <Setter Property="Stroke" Value="Gray" />
            </Style>
        </Grid.Resources>
        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto">
            <TabControl>
                <TabItem Header="RenderTransform">
                    <StackPanel>
                        <Expander Header="Rotação">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Red" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo: " />
                                    <TextBlock Text="{Binding ElementName=sldRotAngulo,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldRotAngulo" Style="{StaticResource sldAngulo}" />
                                <CheckBox Name="chkAnimarRotacao" Content="Animar" IsChecked="False" Margin="5" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - X: " />
                                    <TextBlock Text="{Binding ElementName=sldRotX,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldRotX" Style="{StaticResource sldCentro}" Value="150" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - Y: " />
                                    <TextBlock Text="{Binding ElementName=sldRotY,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldRotY" Style="{StaticResource sldCentro}" Value="150" />
                                <CheckBox Name="chkRotCentro" IsChecked="False" Style="{StaticResource centro}" 
                                          Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Exibir Centro" Margin="3" />
                                        <Ellipse Fill="Red" Style="{StaticResource elCentro}" />
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Expander>
                        <Expander Header="Inclinação">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Blue" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo X: " />
                                    <TextBlock Text="{Binding ElementName=sldIncXAngulo,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldIncXAngulo" Style="{StaticResource sldMeioAngulo}"/>
                                <CheckBox Name="chkAnimarInclinacaoX" Content="Animar" IsChecked="False" Margin="5" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo Y: " />
                                    <TextBlock Text="{Binding ElementName=sldIncYAngulo,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldIncYAngulo" Style="{StaticResource sldMeioAngulo}"/>
                                <CheckBox Name="chkAnimarInclinacaoY" Content="Animar" IsChecked="False" Margin="5" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - X: " />
                                    <TextBlock Text="{Binding ElementName=sldIncX,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldIncX" Style="{StaticResource sldCentro}" Value="0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - Y: " />
                                    <TextBlock Text="{Binding ElementName=sldIncY,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldIncY" Style="{StaticResource sldCentro}" Value="0"/>
                                <CheckBox Name="chkIncCentro" IsChecked="False" Style="{StaticResource centro}"
                                          Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Exibir Centro" Margin="3" />
                                        <Ellipse Fill="Blue" Style="{StaticResource elCentro}"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Expander>
                        <Expander Header="Escala">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Yellow" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Escala X: " />
                                    <TextBlock Text="{Binding ElementName=sldEscX,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscX" Minimum="0.1" Maximum="3"                                         LargeChange="0.5" SmallChange="0.1" Margin="5" Value="1" />
                                <CheckBox Name="chkAnimarEscalaX" Content="Animar" IsChecked="False" Margin="5" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Escala Y: " />
                                    <TextBlock Text="{Binding ElementName=sldEscY,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscY" Minimum="0.1" Maximum="3"                                        LargeChange="0.5" SmallChange="0.1" Margin="5" Value="1" />
                                <CheckBox Name="chkAnimarEscalaY" Content="Animar" IsChecked="False" Margin="5" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - X: " />
                                    <TextBlock Text="{Binding ElementName=sldEscCentroX,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscCentroX" Style="{StaticResource sldCentro}" Value="0"/>                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Centro - Y: " />
                                    <TextBlock Text="{Binding ElementName=sldEscCentroY,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscCentroY" Style="{StaticResource sldCentro}" Value="0"/>
                                <CheckBox Name="chkEscCentro" IsChecked="False" Style="{StaticResource centro}"
                                          Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Exibir Centro" Margin="3" />
                                        <Ellipse Fill="Yellow" Style="{StaticResource elCentro}"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </TabItem>
                <TabItem Header="LayoutTransform">
                    <StackPanel>
                        <Expander Header="Rotação">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="DarkRed" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo: " />
                                    <TextBlock Text="{Binding ElementName=sldRotAnguloL,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldRotAnguloL" Style="{StaticResource sldAngulo}" />
                            </StackPanel>
                        </Expander>
                        <Expander Header="Inclinação">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="DarkBlue" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo X: " />
                                    <TextBlock Text="{Binding ElementName=sldIncXAnguloL,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldIncXAnguloL" Style="{StaticResource sldMeioAngulo}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ângulo Y: " />
                                    <TextBlock Text="{Binding ElementName=sldIncYAnguloL,Path=Value}" />
                                    <TextBlock FontFamily="Palatino Linotype" Text="o" Typography.Variants="Superscript" />
                                </StackPanel>
                                <Slider Name="sldIncYAnguloL" Style="{StaticResource sldMeioAngulo}"/>
                            </StackPanel>
                        </Expander>
                        <Expander Header="Escala">
                            <Expander.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Orange" Offset="0" />
                                    <GradientStop Color="White" Offset="0.1" />
                                </LinearGradientBrush>
                            </Expander.Background>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Escala X: " />
                                    <TextBlock Text="{Binding ElementName=sldEscXL,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscXL" Minimum="0.1" Maximum="3"                                        LargeChange="0.5" SmallChange="0.1" Margin="5" Value="1" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Escala Y: " />
                                    <TextBlock Text="{Binding ElementName=sldEscYL,Path=Value}" />
                                </StackPanel>
                                <Slider Name="sldEscYL" Minimum="0.1" Maximum="3"                                        LargeChange="0.5" SmallChange="0.1" Margin="5" Value="1" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>
