        <Canvas Name="SEP" Width="300" Height="300" Grid.Column="1">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="rot" 
                                     CenterX="{Binding ElementName=sldRotX,Path=Value}" 
                                     CenterY="{Binding ElementName=sldRotY,Path=Value}"
                                     Angle="{Binding ElementName=sldRotAngulo,Path=Value}" />
                    <SkewTransform x:Name="inc" 
                                   CenterX="{Binding ElementName=sldIncX,Path=Value}" 
                                   CenterY="{Binding ElementName=sldIncY,Path=Value}" 
                                   AngleX="{Binding ElementName=sldIncXAngulo,Path=Value}" 
                                   AngleY="{Binding ElementName=sldIncYAngulo,Path=Value}" />
                    <ScaleTransform x:Name="esc" 
                                    CenterX="{Binding ElementName=sldEscCentroX,Path=Value}"
                                    CenterY="{Binding ElementName=sldEscCentroY,Path=Value}"                                    ScaleX="{Binding ElementName=sldEscX,Path=Value}"                                    ScaleY="{Binding ElementName=sldEscY,Path=Value}" />
                </TransformGroup>
            </Canvas.RenderTransform>
            <Canvas.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="{Binding ElementName=sldRotAnguloL,Path=Value}" />
                    <SkewTransform AngleX="{Binding ElementName=sldIncXAnguloL,Path=Value}" 
                                   AngleY="{Binding ElementName=sldIncYAnguloL,Path=Value}" />
                    <ScaleTransform ScaleX="{Binding ElementName=sldEscXL,Path=Value}"                                    ScaleY="{Binding ElementName=sldEscYL,Path=Value}" />
                </TransformGroup>
            </Canvas.LayoutTransform>
