<Window
  x:Class="Hardcodet.Wpf.Util.Window1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Hardcodet.Wpf.Util"
  Height="210"
  Width="371">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FFC2C2C2" Offset="0"/>
			<GradientStop Color="#FF585858" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
  <Grid>
    
    <!-- declare a button with an attached image -->
    <Button
      x:Name="btnOk"
      Content="OK"
      local:EyeCandy.Image="Ok.png"
      Style="{DynamicResource ImageButton}"
      Margin="109,0,133,10" Height="33" VerticalAlignment="Bottom"
      />
    <Button
    	x:Name="btnCancel"
    	Content="Cancel"
    	local:EyeCandy.Image="Cancel.png"
    	Style="{DynamicResource ImageButton}"
    	Margin="0,0,10,10"
    	VerticalAlignment="Bottom" Height="33" Width="113" HorizontalAlignment="Right"
      />
    <TextBlock Margin="20,10,10,0" TextWrapping="Wrap" FontSize="20" Height="44" VerticalAlignment="Top"><Run Text="Attached Button Images..." Language="de-ch"/></TextBlock>
    <TextBlock Margin="20,54,10,62" FontSize="11" TextWrapping="Wrap"><Run Text="Icons from Everaldo Coelho's CrystalClear icon set: " Language="de-ch"/><LineBreak/><Run Text="http://www.everaldo.com/crystal/" Language="de-ch"/></TextBlock>
  </Grid>
</Window>
