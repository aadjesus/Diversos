<Window x:Class="ConsultaHistDetec.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Usuario: "/>
            <TextBox Name="txtUsuario" />
            <Label Content="Senha: "/>
            <TextBox Name="txtSenha" />
            <Label Content="Descricao: "/>
            <TextBox Name="txtNovaDesc" />
            <Button Content="Salvar" Height="20" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
