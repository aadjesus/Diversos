    <Viewport3D Name="mainViewport" ClipToBounds="True">
        <Viewport3D.Camera>
            <PerspectiveCamera 
                        Position="10,8,9"
                        LookDirection="-11,-9,-10"
                        FarPlaneDistance="100"
                        UpDirection="0,1,0"
                        NearPlaneDistance="1" 
                        FieldOfView="90" >
                <PerspectiveCamera.Transform>
                    <Transform3DGroup x:Name="transformGroup">
                        <RotateTransform3D>
                            <RotateTransform3D.Rotation>
                                <AxisAngleRotation3D x:Name="rotY"
                      Axis="0 1 0" 
                      Angle="0" />
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>
                        <RotateTransform3D>
                            <RotateTransform3D.Rotation>
                                <AxisAngleRotation3D x:Name="rotX"
                      Axis="1 0 0" 
                      Angle="0" />
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>
                        <RotateTransform3D>
                            <RotateTransform3D.Rotation>
                                <AxisAngleRotation3D x:Name="rotZ"
                      Axis="0 0 1" 
                      Angle="0" />
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>
                    </Transform3DGroup>
                </PerspectiveCamera.Transform>

            </PerspectiveCamera>
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <Model3DGroup>

                    <AmbientLight Color="Blue"/>
                    <DirectionalLight 
                                Color="White" 
                                Direction="-2,-3,-1" />
                </Model3DGroup>

            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>

</Window>
