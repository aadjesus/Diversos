<UserControl x:Class="FGlobus.Componentes.WinForms.Calendario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="530" 
             d:DesignWidth="948" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <Grid>
        <dxe:DateNavigator Name="dtNvgtrCalendario" 
                           ShowTodayButton="True" 
                           ShowWeekNumbers="False" 
                           CalendarView="Month"                                                       
                           FocusedDate="1/9/2013"                            
                           ColumnCount="4" 
                           RowCount="3" FirstDayOfWeek="{x:Null}" IsHitTestVisible="True" HighlightHolidays="True" SnapsToDevicePixels="False">
            
        </dxe:DateNavigator>
    </Grid>
</UserControl>
